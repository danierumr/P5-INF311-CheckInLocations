<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="30dp"
    >

    <TextView
        android:id="@+id/text_title_relatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locais Mais Visitados"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        />

    <LinearLayout
        android:id="@+id/header_relatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_title_relatorio"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCAL:"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISITAS"
            android:layout_weight="1"
            android:gravity="end"
            />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_relatorio"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/layoutRelatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>

    </ScrollView>

</RelativeLayout>